here=$(dirname $(readlink -f ${0}))

#
# Convert multiple spaces to single tabs.
tabify()
    {
    sed 's/[[:space:]]\{1,\}/\t/g'
    }

#
# Confirm an action.
confirm()
    {
    local message=${1:-Ok}  
    local response  
    read -p "${message} (Y/n)" response
    case ${response:-'y'} in
        y|Y)
            return 0
            ;;
        *)
            return 1
            ;;
    esac
    }

#
# Check script is being run as root.
# zero for success, non-zero for failure
isroot()
    {
    if [ $(id -u) -eq 0 ]
    then
        return 0
    else
        return 1
    fi
    }

